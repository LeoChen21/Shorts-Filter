{
    "manifest_version": 3,
    "name": "Youtube Shorts Filter",
    "version": "2.0",
    "description": "This extension filters shorts.",
    "permissions": [
      "https://www.youtube.com/shorts/*"
    ],
    "content_scripts": [
      {
        "matches": [
            "https://www.youtube.com/shorts/*"
        ],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "hello_extensions.png"
    }
  }